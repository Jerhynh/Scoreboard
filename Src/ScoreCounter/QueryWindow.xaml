<Window x:Class="ScoreCounter.QueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoreCounter"
        mc:Ignorable="d"
        Title="Game Setup"
        Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#212121"
        ResizeMode="NoResize">
    <Grid>
        <Label Foreground="White" Content="Voice Prompts:" VerticalAlignment="Top" Margin="11,30,0,0"/>
        <CheckBox Name="VoicePromptsCB" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-150,38,0,0"/>
        <Label Foreground="White" Content="Points To Win:" VerticalAlignment="Center" Margin="11"/>
        <TextBox Name="ScoreToWinTB" Width="180" AcceptsReturn="False" AcceptsTab="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Submit" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="40" Click="SubmitButtonClick"/>
    </Grid>
</Window>
